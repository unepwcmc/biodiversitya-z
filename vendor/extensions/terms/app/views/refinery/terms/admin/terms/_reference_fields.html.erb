<fieldset class='nested expandable-fields reference' data-nested-item='true' data-sortable-item='true'>

  <fieldset class="open-section">
    <span class="reference_number"></span>&nbsp;<span><%= f.object.title %></span>
    <%= refinery_icon_tag 'arrow_switch', 'data-handle' => true, :title => 'Reorder', :class => 'handle' %>
  </fieldset>

  <fieldset class="section-details">
    <%= f.hidden_field :position, 'data-position' => true %>

    <div class='field'>
      <%= f.label :title %>
      <%= f.text_field :title, :class => 'change-title-on-edit' %>
    </div>

    <div class='field'>
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
  </fieldset>

  <%= link_to_remove_field 'Remove this reference', f %>

</fieldset>